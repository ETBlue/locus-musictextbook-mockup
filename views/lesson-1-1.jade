block script
  script.
    $("#topbar .icon.book").parent(".item").addClass("active");
    $('.popup').popup();
    //-$('#title').load('book/1/1.html h1');
    $('#textbook').load('book/1/1.html p');
    $('#header .menu .item').on('click tap',function(){
      $('#header .menu .item').removeClass('active');
      $(this).addClass('active');
      $('.section').hide();
      $('.section#' + $(this).attr('data-name')).show();
    });